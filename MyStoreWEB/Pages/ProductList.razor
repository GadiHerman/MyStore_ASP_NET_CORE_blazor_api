@page "/ProductList"
@inherits ProductListBase
<h3>Products List</h3>

<div class="card-deck">
    @foreach (var item in Products)
    {
    <div class="card m-3" style="min-width: 18rem;max-width:30.5%;">

        <div class="card-header">@item.ProductName</div>
        <img src="@item.ImagePath" class="card-img-top" alt="@item.ProductName" style="height:200px;width:auto;">
        <div class="card-body">
            <h5 class="card-title">Price: @item.ProductPrice</h5>
            <p class="card-text">@item.ProductDescription</p>
            <small class="text-muted">Shipping Ounces: @item.ProductShippingOunces</small>
        </div>            
        <div class="card-footer text-center">
            <a href="#" class="btn btn-primary">View</a>
            <a href="#" class="btn btn-success">Add to cart</a>
        </div>
    </div>
    }



</div>
